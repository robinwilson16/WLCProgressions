<!--Loading Area HTML showing loading animation-->
<div id="LoadingHTML" class="d-none">
    <div class="col text-center LoadingArea">
        <i class="fas fa-spinner fa-spin"></i>
    </div>
</div>

<div class="modal fade" id="ProgressionModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="ProgressionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ProgressionModalLabel"><i class="fas fa-share"></i> <span class="title">Progression to a New Course</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md">
                            <h2>Progressing <span id="NumLearnersSelected">0</span> learners to another course <span id="DeptIndicator"></span></h2>
                            <p>
                                Please search for the course you wish to progress these learners to:
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <form>
                                <div class="form-group row">
                                    <label for="CourseSearchToBox" class="col-sm-4 col-form-label">Course Progressing To:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control CourseSearchBox" id="CourseSearchToBox" aria-describedby="CourseSearchToBoxHelp" placeholder="Enter course code/title" aria-label="SearchToBox">
                                        <small id="CourseSearchToBoxHelp" class="form-text text-muted">The search will occur automatically once you enter sufficient characters</small>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md SearchArea" id="SearchToArea">
                            <div class="alert alert-secondary text-center" role="alert">
                                <i class="fas fa-info-circle"></i> No results...
                            </div>
                        </div>
                    </div>

                    <div class="row Spacer">
                        <div class="alert alert-secondary col" role="alert" id="CoursePageToNav">

                        </div>
                    </div>

                    <div class="row d-none alert alert-success SelectedCourseDetails" id="ProgressToArea">
                        <div class="col">
                            <div class="container">
                                <h5 class="alert-heading">Progress learners to:</h5>
                                <hr>
                                <div class="row">
                                    <div class="col-md" id="FacultyNameID">
                                        Faculty
                                    </div>
                                    <div class="col-md" id="TeamNameID">
                                        Team
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md font-weight-bold" id="CourseCodeID">
                                        Course Code
                                    </div>
                                    <div class="col-md" id="CourseTitleID">
                                        Course Title
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md StudentArea" id="StudentToArea">
                                        <div class="alert alert-danger text-center" role="alert">
                                            <i class="fas fa-exclamation-circle"></i> Error loading list of learners
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success SaveProgressionButton disabled"><i class="fas fa-book"></i> Progress These Learners<span id="ProgressToCourseButtonTextID"></span></button>
                <button type="button" class="btn btn-danger CancelProgressionButton" data-dismiss="modal"><i class="fas fa-sign-out-alt"></i> Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="NoProgressionRouteModal" data-bs-backdrop="static" data-bs-keyboard="false" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="NoProgressionRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-white">
                <h5 class="modal-title" id="NoProgressionRouteModalLabel"><i class="fa-solid fa-ban"></i> <span class="title">No Progression Route Available</span></h5>
                <button type="button" class="close" data-bs-dismiss="modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-white">
                <div class="container first">
                    <div id="NoProgressionRouteStudentList"></div>
                    <div id="NoProgressionRouteDetails" class="row">
                        <div class="col text-center LoadingArea">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-white">
                <button type="button" class="btn btn-success SaveNoProgressionRouteButton"><i class="fas fa-save"></i> Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-sign-out-alt"></i> Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ChartModal" data-backdrop="static" data-keyboard="true" tabindex="-1" role="dialog" aria-labelledby="ChartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ChartModalLabel"><i class="fas fa-chart-line"></i> <span class="title">Progress So Far</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-primary" role="alert" id="BreadcrumbBar">
                    
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md text-center">
                            <div id="PopupLoading" class="PopupLoading">
                                <h1><i class="fas fa-spinner fa-spin"></i></h1>
                            </div>
                            <div id="OutcomesProgressChartPopupContainer" class="chart-container d-none OutcomesProgressChartPopupContainer">
                                <canvas id="OutcomesProgressChartPopup" style="width:100%; height:450px"></canvas>
                            </div>
                            <div id="OutcomesProgressTablePopupContainer" class="d-none OutcomesProgressTablePopupContainer">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-sign-out-alt"></i> Close</button>
            </div>
        </div>
    </div>
</div>